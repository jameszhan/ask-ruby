<div class="activity-info">   
  <div class="author">
    <div class="timeago_info">
      <span>
        <%= updated_text %> <%= time_ago_in_words(created_at)%> ago
      </span>
    </div>
    <div class="avatar_left">
      <%= image_tag avatar_url(user), :size => "32x32" %>
    </div>
    <div class="user_info">
      <%= link_to user.name, user %><br>
      <span>wojiao jinsanpangwojiao</span>
    </div>
  </div>
</div>  
