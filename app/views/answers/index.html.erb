<div class="page-header">
  <h1><%=t 'mongoid.models.answer', :default => Answer.model_name.human.pluralize %></h1>
</div>

<h1><%= t("mongoid.models.answer") %></h1>
<div id="answers">
  <table class="table table-bordered table-striped table-condensed">
    <thead>
      <tr class="head">
      <td>编号</td>
              <td><%= t("mongoid.attributes.answer.body") %></td>
            <td>创建时间</td>
      <td class="opts"></td>
      </tr>
    </thead>
    <tbody>
      <% @answers.each do |item| %>
        <tr class="<%= cycle("","even") %>">
          <td><%= item.id %></td>
                      <td><%= item.body %></td>
                    <td><%= l(item.created_at, :format => :long) %></td>
          <td>
            <%= link_to edit_answer_path(item.id), :class => 'btn btn-mini' do %>
              <i class="icon-pencil"></i><%= t('.edit', :default => t("helpers.links.edit")) %>
            <% end %>
            <%= link_to answer_path(item.id),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' do %>
              <i class="icon-trash"></i><%= t('.destroy', :default => t("helpers.links.destroy")) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="tools">
  <a href="<%= new_answer_path %>" class="btn btn-small btn-success">新建</a>
</div>

