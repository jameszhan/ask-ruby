<!--question -->
<div class="row-fluid box">
  <div class="span1">
    <div class="vote-buttons">
      <div class="voteup"></div>
      <div class="votenumber">0</div>
      <div class="votedown"></div>
    </div>
  </div>
  <div class="span11" style="margin-left: 0px;">
    <h3><%= @question.title %></h3>
    <ul class="inline">          
      <% @question.tags.each do|tag| -%>
      <li class="tag">
        <%= link_to tag, tagged_with_questions_path(tag), class: "btn-small btn" %>
      </li>
      <% end -%>
    </ul>
    <div>
      <%= render "shared/user_info", updated_text: "asked", created_at: @question.created_at, user: @question.user -%>  
      <%= markdown @question.body %>
    </div>

    <!--Comments-->
    <div class="comment">
      <% if @question.comments -%>
      <%= render "shared/comment", comments: @question.comments -%>
      <% end -%>
      <label>post a comment</label>
      <div id="comment-form" style="display: none;">
        <%= render "shared/comment_form", target: @question %>
      </div>
    </div>

  </div>
</div>

<!--answers-->    
<div id="question-answers" class="row-fluid">
  <div class="answers-tab box row-fluid">
    <span id="answers-count" class="title"><b><%= @question.answers_count %></b> answers</span>
    <div id="sort_tabs" class="pagination">
    <ul>
      <li><span>Sort by »</span></li>  
      <li>
        <a id="by_answers" href="/questions?sort=answers-desc" data-sort="answers-asc" title="click to see the most answered questions"><span>by answers</span></a>
      </li>
      <li>
        <a id="by_votes" href="/questions?sort=votes-desc" data-sort="votes-asc" title="click to see most voted questions"><span>by votes</span></a>
      </li>
    </ul> 
    </div>
  </div>
  <%= render "answers/answer", answers: @question.answers %>
</div>

<!--answer box -->
<% if can? :create, Answer -%>
  <%= render "answers/form", question: @question %>
<% else -%>
  <%= render :partial => "shared/need_login", locals: {prompt_message: "回答"} %>
<% end -%>
