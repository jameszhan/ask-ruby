<div class="box crop">
  <h2 class="title">Crop Avatar</h2>
  
  <%= image_tag @user.avatar_url(:large), id: "cropbox", class: "disabled" %>

  <div class="preview-box">
    <strong>预览</strong>
    <div style="width:160px; height:160px; overflow:hidden">
      <%= image_tag @user.avatar.url(:large), :id => "preview" %>
    </div>
  </div>


  <%= simple_form_for @user, url: crop_users_path do |f| %>
    <% %w[x y w h].each do |attribute| %>
      <%= f.input "crop_#{attribute}", as: :hidden %>    
    <% end %>  
  
    <div class="actions">
      <%= f.submit "Crop", class: "btn btn-small btn-primary" %>
    </div>
  <% end %>
</div>
