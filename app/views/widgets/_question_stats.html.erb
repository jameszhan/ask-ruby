<div class="box">
  <%= render partial: "widgets/header", locals: {widget: widget} %>
  <div class="question_stats">
    <table class="table table-hover">
    	<tr>
    		<td><%= t("widgets.question_stats.asked_at", default: "Asked") %></td>
    		<td><%= @question.created_at.strftime("%b %d '%y")  %></td>
    	</tr>
    	<tr>
    		<td><%= t("widgets.question_stats.user", default: "User") %></td>
    		<td><%= @question.user.name %></td>
    	</tr>
    	<tr>
    		<td><%= t("widgets.question_stats.updated_at", default: "Updated") %></td>
    		<td><%= @question.updated_at.strftime("%b %d '%y")  %></td>
    	</tr>
    </table>
  </div>
</div>